<h1>Edit User Form</h1>

<%  if flash[:message] %>
  <% flash[:message].each do |message| %>
    <h2  style="color: red;"><%=  message %> <br /></h2>      
  <% end %>
<% end %> 

<% if params[:pw_only] == "true"%>
  <%= form_for(@user) do |f|%>
      <label>Password:<label>
      <%= f.text_field :password%><br>
    <%=f.submit%>
  <% end %>
<% else %>
  <%= form_for(@user) do |f|%>
      <label>First Name:<label>
      <%= f.text_field :first_name%><br>

      <label>Last Name:<label>
      <%= f.text_field :last_name%><br>

      <label>Street:<label>
      <%= f.text_field :street%><br>

      <label>City:<label>
      <%= f.text_field :city%><br>

      <label>State:<label>
      <%= f.text_field :state%><br>

      <label>Postal Code:<label>
      <%= f.text_field :postal_code%><br>

      <label>Age:<label>
      <%= f.text_field :age%><br>

      <label>Email Address:<label>
      <%= f.text_field :email_address%><br>

      <%= f.hidden_field :password, :value => @user.password %>

    <%=f.submit%>
  <% end %%>
  <%= button_to 'Edit your password', edit_user_path(session[:user_id]), method: :get, params: { pw_only: "true"}%>
<%end%>
