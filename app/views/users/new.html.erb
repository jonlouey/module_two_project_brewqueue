<h2>New User Form</h2>

<%  if flash[:message] %>
  <% flash[:message].each do |message| %>
   <h2  style="color: red;"><%=  message %> <br /></h2>
  <% end %>
<% end %> 
<br />

<%= form_for(@user) do |f|%>
    <label>First Name:<label>
    <%= f.text_field :first_name%><br>


    <label>Age:<label>
    <%= f.text_field :age %><br>

    <label>Email Address:<label>
    <%= f.text_field :email_address%><br>

    <label>Password:<label>
    <%= f.password_field :password%><br>
<br />
<%=f.submit%>
<br />
<%end%>
