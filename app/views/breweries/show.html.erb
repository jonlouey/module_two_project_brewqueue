<h1>Show page for <%= @brewery.name %></h1>

<p>Brewery type: <%= @brewery.brewery_type %></p>
<p>Brewery Address: <%= @brewery.street %>, <%= @brewery.city %>, <%= @brewery.state%> <%=@brewery.postal_code %> </p>

<p>Phone: <%= @brewery.phone %></p>
<p>Website: <%= link_to @brewery.website_url, @brewery.website_url, target: :_blank %></p>

<!-- This HTML will load a google MAP with of the brewery's location  -->
<% if @brewery.street != "" && @brewery.street.exclude?("PO Box") && @brewery.city != "" && @brewery.state != "" %>
   <div class="mapouter"><div class="gmap_canvas"><iframe width="450" height="375" id="gmap_canvas" src="https://maps.google.com/maps?q=<%=@brewery.street%>%2C<%=@brewery.city%>%2C<%=@brewery.state%>&t=&z=14&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.embedgooglemap.net/blog/best-wordpress-themes/"></a></div></div>
<% elsif @brewery.longitude != "" && @brewery.longitude != "" %>
   <div class="mapouter"><div class="gmap_canvas"><iframe width="450" height="375" id="gmap_canvas" src="https://maps.google.com/maps?q=<%=@brewery.latitude%>%2C<%=@brewery.longitude%>&t=&z=14&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.embedgooglemap.net/blog/best-wordpress-themes/"></a></div></div>
<% elsif @brewery.city != "" && @brewery.state != "" %>
   <div class="mapouter"><div class="gmap_canvas"><iframe width="450" height="375" id="gmap_canvas" src="https://maps.google.com/maps?q=<%=@brewery.city%>%2C<%=@brewery.state%>&t=&z=14&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.embedgooglemap.net/blog/best-wordpress-themes/"></a></div></div>
<% end %>


<%= button_to "Edit this brewery", edit_brewery_path(@brewery.id), method: :get %>
<%= button_to "Delete this brewery", "/breweries/#{@brewery.id}", method: :delete %>
<%= button_to "Show all breweries", breweries_path, method: :get %>



